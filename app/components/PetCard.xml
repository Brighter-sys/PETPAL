<GridLayout xmlns="http://schemas.nativescript.org/tns.xsd" class="bg-white rounded-xl shadow-xl">
    <GridLayout rows="*, auto">
        <Image src="{{ petData.imageUrl }}" stretch="aspectFill" class="rounded-t-xl" row="0" />
        
        <StackLayout row="1" class="p-4 space-y-2">
            <GridLayout columns="*, auto">
                <Label text="{{ petData.name }}" class="text-xl font-bold" />
                <Label text="{{ petData.price }}" class="text-lg text-purple-600 font-semibold" col="1" />
            </GridLayout>
            
            <Label text="{{ petData.breed }}" class="text-gray-600" />
            
            <GridLayout columns="auto, auto, auto" class="space-x-2">
                <Label text="{{ petData.age }}" class="text-sm bg-gray-200 rounded-full px-3 py-1" />
                <Label text="{{ petData.gender }}" class="text-sm bg-gray-200 rounded-full px-3 py-1" />
                <Label text="{{ petData.location }}" class="text-sm bg-gray-200 rounded-full px-3 py-1" />
            </GridLayout>
        </StackLayout>
    </GridLayout>
</GridLayout>